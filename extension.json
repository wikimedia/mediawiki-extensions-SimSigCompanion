{
	"name": "SimSig Companion",
	"author": "Lewis Cawte <lewis@lewiscawte.me>",
	"url": "https://www.mediawiki.org/wiki/Extension:SimSig_Companion",
	"description": "This extension is provides companion features for SimSig communities",
	"descriptionmsg": "simsigcompanion-desc",
	"version": "0.1",
	"license-name": "GPL-3.0-or-later",
	"type": "specialpage",
	"manifest_version": 2,

	"SpecialPages": {
		"SimSig": {
			"class": "MediaWiki\\Extension\\SimSigCompanion\\SpecialSimSig"
		},
		"MySimSig": {
			"class": "MediaWiki\\Extension\\SimSigCompanion\\SpecialMySimSig"
		}
	},

	"MessagesDirs": {
		"SimSigCompanion": [
			"i18n"
		]
	},

	"ExtensionMessagesFiles": {
		"SimSigCompanionAlias": "SimSigCompanion.alias.php"
	},

	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\SimSigCompanion\\": "src/"
	},

	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "SimSigCompanion/resources"
	},

	"ResourceModules": {
		"ext.simsigcompanion.mysimsig.styles": {
			"class": "MediaWiki\\ResourceLoader\\CodexModule",
			"styles": "ext.simsigcompanion.mysimsig.styles/styles.less",
			"codexStyleOnly": "true",
			"codexComponents": [
				"CdxButton",
				"CdxCheckbox",
				"CdxToggleSwitch",
				"CdxTable",
				"CdxInfoChip"
			]
		}
	},

	"Hooks": {
		"LoadExtensionSchemaUpdates": "MediaWiki\\Extension\\SimSigCompanion\\Hooks::onLoadExtensionSchemaUpdates"
	}
}
