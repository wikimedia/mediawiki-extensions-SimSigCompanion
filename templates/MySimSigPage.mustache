<div id="mysimsig-wrapper">
	<div id="mysimsig-header">
		{{ mysimsig-header }}
	</div>
	<div id="mysimsig-content cdx-table">
		<div id="mysimsig-form cdx-table__table-wrapper">
			<form method="post" action="{{{ mysimsig-formURL }}}">
				<table class="cdx-table__table">
					<thead>
					<tr>
						<th scope="col" class="cdx-table__th-content">{{ mysimsig-table-header-simulations }}</th>
						<th scope="col" class="cdx-table__th-content">{{ mysimsig-table-header-owned }}</th>
					</tr>
					</thead>

					<tbody>
					{{#mysimsig-data}}
						<tr>
							<td scope="row">{{simName}}</td>
							<td>
								<span class="cdx-toggle-switch">
									<input
										id="cdx-toggle-switch-css-1"
										name="owned_{{simId}}"
										value="1"
										class="cdx-toggle-switch__input"
										type="checkbox"
										{{#simOwned}}checked{{/simOwned}}
										{{#simFree}}checked disabled{{/simFree}}
									/>
									<span class="cdx-toggle-switch__switch">
										<span class="cdx-toggle-switch__switch__grip"></span>
									</span>
								</span>
							</td>
						</tr>
					{{/mysimsig-data}}

					{{^mysimsig-data}}
						<tr>
							<td colspan="2">{{ mysimsig-error-nosims }}</td>
						</tr>
					{{/mysimsig-data}}
					</tbody>
				</table>

				<input type="hidden" value="{{ mysimsig-edittoken }}" name="wpEditToken">
				<button name="wpSave" type="submit"
					class="cdx-button cdx-button--action-progressive cdx-button--weight-primary">
					{{ mysimsig-button-submit }}
				</button>

			</form>
		</div>
	</div>
</div>
